# Twitter API credentials
TWITTER_BEARER_TOKEN=your_bearer_token_here
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# Official handle to monitor
OFFICIAL_HANDLE=your_official_handle

# List of fraudulent clone handles (comma-separated)
CLONE_HANDLES=clone1,clone2,clone3

# Telegram bot settings
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email notification settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_RECIPIENTS=admin1@example.com,admin2@example.com

# Database settings (SQLite by default)
DATABASE_URL=sqlite:///twitter_monitor.db

# Report settings
REPORT_TIME_UTC=00:00
REPORT_OUTPUT_DIR=reports

# Monitoring interval (in minutes)
MONITORING_INTERVAL=5

# Logging settings
LOG_LEVEL=INFO